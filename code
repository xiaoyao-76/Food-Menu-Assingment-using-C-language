#include <stdio.h>

void bf() {
	int optbf = 0;
	while (optdin != 7) {
		printf("1.milo\n2.milk\n3.milk\n4.boiled egg\n5.fired egg\n.6hotdog\n\7.exit\n");
		scanf_s("%d", &optbf);
	}
}

void lunch() {
	int optlun = 0;
	while (optlun != 5) {
		printf("1.kolo mee\n2.kampua mee\n3.mix vegetable\n4.curry chicken\n\5.exit\n");
		scanf_s("%d", &optlun);
	}
}

void dinner() {
	int optdin = 0;
	while (optdin != 5) {
		printf("1.steamed chicken\n2.fried chicken\n3.fried okra\n4.fried mani vegetable\5.exit");
		scanf_s("%d", &optdin);
	}
}

int main() {
	int option=0;
	while(option!=4){
		printf("1.breakfast\n2.lunch\n3.dinner\n4.exit\n");
		scanf_s("%d", &option);
		switch (option) {
			case 1:{
				breakfast();
				break;
			}
			case 2: {
				lunch();
				break;
			}
			case 3: {
				dinner();
				break;
			}
			case 4: {
				printf("exit\n");
				break;
			}
		}
	}
	
	return 0;
}
